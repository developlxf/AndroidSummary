<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidsummary.NoteActivity"
    android:background="#F0E68C">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_note"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0099FF"
        android:elevation="10dp"
        android:title="记事本"
        android:logo="@drawable/icon_note"/>

    <Button
        android:id="@+id/btn_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnselector"
         />

    <com.example.androidsummary.widget.SlidingListView
        android:id="@+id/listview_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_note"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar_note">

    </com.example.androidsummary.widget.SlidingListView>
</RelativeLayout>
